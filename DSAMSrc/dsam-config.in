#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage()
{
	cat <<EOF
Usage: dsam-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
	[--rflags]
	[--gui]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
	case "$1" in
	-*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
	*) optarg= ;;
	esac

	case $1 in
	--prefix=*)
		prefix=$optarg
		if test $exec_prefix_set = no ; then
			exec_prefix=$optarg
		fi
		;;
	--prefix)
		echo_prefix=yes
		;;
	--exec-prefix=*)
		exec_prefix=$optarg
		exec_prefix_set=yes
		;;
	--exec-prefix)
		echo_exec_prefix=yes
		;;
	--version)
		echo @DSAM_VERSION@
		exit 0
		;;
	--cflags)
		if test "@includedir@" != /usr/include ; then
			includes="-I@includedir@"
		fi
		echo_cflags=yes
		;;
	--rflags)
		echo_rflags=yes
		;;
	--libs)
		echo_libs=yes
		;;
	--gui)
		if test -z "@WXWIN_FALSE@"; then
			echo Graphics support not installed.
			exit 1
		fi
		use_gui=yes
		;;
	*)
		usage 1 1>&2
		;;
	esac
	shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi
if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi
if test "$echo_cflags" = "yes"; then
	cflags="@DEFS@ -I@includedir@/@PACKAGE@"
	if test "$use_gui" = "yes"; then
		cflags="$cflags @DSAM_GRAPHICS@ @WXINC@"
	fi
	if test "$MINGW32" = "yes"; then
		cflags="$cflags -mwindows"
	fi
	echo $cflags
fi
if test "$echo_rflags" = "yes"; then
	rflags="@RESFLAGS@ --include-dir @includedir@"
	echo $rflags
fi
if test "$echo_libs" = "yes"; then
	libs="-L@libdir@ -l@PACKAGE@"
	if test "$use_gui" = "yes"; then
		libs="$libs -l@PACKAGE@_g @WXLDFLAGS@"
	else
		libs="$libs -l@PACKAGE@_std -lm"
	fi
	echo $libs
fi
