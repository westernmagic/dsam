!if "$(BCCDIR)" == ""
!error You must define the BCCDIR variable in autoexec.bat, e.g. BCCDIR=d:\bc4
!endif

!if "$(DSAMDIR)" == ""
!error You must define the DSAMDIR variable in autoexec.bat, e.g. DSAMDIR=c:\dsam\v0.6
!endif

###############################################################################
###############################################################################
##                     General make environment                              ##
###############################################################################
###############################################################################

BOR_VER = 5

###############################################################################

BASELNAM= DSAM

INCNAME	= Include
INCDIR	= $(DSAMDIR)\$(INCNAME)
LDIRNAME= lib
LIBDIR	= $(DSAMDIR)\$(LDIRNAME)
BINDIR	= $(DSAMDIR)\bin
CFGNAME	= $(BASELNAM).cfg
CFG		= $(LIBDIR)\$(CFGNAME)
RESNAME	= dsam.res
RES		= $(LIBDIR)\$(RESNAME)

CCDSAM	= ccdsam$(SUPPORT_SUFFIX)

MAIN_LIB_DIR= MainLib
STD_LIB_DIR	= StdLib
GR_LIB_DIR	= GrLib

MAIN_LIB	= $(LIBDIR)\$(BASELNAM).lib
STD_LIB		= $(LIBDIR)\$(BASELNAM)_std.lib
GR_LIB		= $(LIBDIR)\$(BASELNAM)_g.lib

MAIN_CFG_NAM= $(BASELNAM).cfg
MAIN_CFG	= $(LIBDIR)\$(MAIN_CFG_NAM)

GR_CFG_NAM	= $(BASELNAM)_g.cfg
GR_CFG		= $(LIBDIR)\$(GR_CFG_NAM)

DSAM_LDLIBS	= -l$(BASELNAM) $(WXLDLIBS) $(MPI_LDLIBS)

WXWINCFG= $(WXWIN)/src/msw/wxwin32.cfg

DEBUG_FLAGS = #-v -R #-DDEBUG=$(DEBUG)
# The option line below is for 32 bit mode
OPTIONS =  -DBORLANDC -i55 $(DEBUG_FLAGS) -DHAVE_CONFIG_H=1
#Uncomment the following for pre-compiled headers
#OPTIONS2 =  -H=%DSAMDIR%\lib\$(BASELNAM).csm
#Console output BASELNAM
CFLAGS	= @$(MAIN_CFG) $(OPTIONS2)
AR		= tlib
ARFLAGS	= /P64 -+
RM		= erase
RMFLAGS	=
CC		= bcc32

.SUFFIXES:      .c .cpp .obj

.c.obj:
		$(CC) $(CFLAGS) -P- -c $<
		$(AR) $(LIB) $(ARFLAGS) $*.obj
#               $(RM) $(RMFLAGS) $*.obj

.cpp.obj:
		$(CC) $(CFLAGS) -c $<
		$(AR) $(LIB) $(ARFLAGS) $*.obj

GEN_HEADERS	= $(INCDIR)/GeCommon.h $(INCDIR)/GeSignalData.h \
			  $(INCDIR)/GeEarObject.h $(INCDIR)/GeUniParMgr.h


